<Page x:Class="FlightSimulatorApp.SimulatorView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FlightSimulatorApp"
      xmlns:m="clr-namespace:Microsoft.Maps.MapControl.WPF;assembly=Microsoft.Maps.MapControl.WPF"
      xmlns:Controls ="clr-namespace:FlightSimulatorApp.controls"
      mc:Ignorable="d" 
        Title="FlightSimulatorApp" Height="645" Width="1000" Background="AliceBlue">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="2" Orientation="Horizontal">

            <StackPanel Orientation="Vertical">
                <Label Margin="50,20,0,0"  FontWeight="Bold">Rudder:</Label>
                <Label Margin="0,0,0,0" FontWeight="Bold"></Label>
                <Slider Value="{Binding MV_Rudder, Mode=TwoWay}" Maximum="1" Minimum="-1" HorizontalAlignment="Left" TickPlacement="BottomRight" TickFrequency="0.1"
                Margin="10,10,15,10"
                VerticalAlignment="Center"
                Width="150" />
            </StackPanel>

            <StackPanel Orientation="Vertical">
                <Label Margin="50,20,0,0"  FontWeight="Bold">Trottle:</Label>
                <Label Margin="0,0,0,0" FontWeight="Bold"></Label>
                <Slider Value="{Binding MV_Throttle, Mode=TwoWay}" Maximum="1" Minimum="0" HorizontalAlignment="Left" TickPlacement="BottomRight" TickFrequency="0.1"
                Margin="10,10,15,10"
                VerticalAlignment="Center"
                Width="150"/>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <Label Margin="50,20,0,0"  FontWeight="Bold">Elevator:</Label>
                <Label Margin="0,0,0,0" FontWeight="Bold"></Label>
                <Slider Value="{Binding MV_Elevator, Mode=TwoWay}" Maximum="1" Minimum="-1" HorizontalAlignment="Left" TickPlacement="BottomRight" TickFrequency="0.1"
                Margin="10,10,15,10"
                VerticalAlignment="Center"
                Width="150"/>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <Label Margin="50,20,0,0"  FontWeight="Bold">Aileron:</Label>
                <Label Margin="0,0,0,0" FontWeight="Bold"></Label>
                <Slider Value="{Binding MV_Aileron, Mode=TwoWay}" Maximum="1" Minimum="0" HorizontalAlignment="Left" TickPlacement="BottomRight" TickFrequency="0.1"
                Margin="10,10,15,10"
                VerticalAlignment="Center"
                Width="150"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Column="2"  Grid.RowSpan="2" Grid.Row="0" Orientation="Vertical" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="373" Margin="227.667,0,0.333,0">
            <StackPanel Margin="5">
                <WrapPanel Margin="0,10,0,0">
                    <TextBlock Text="indicatedHeadingDeg: " />
                    <TextBlock Text="{Binding VM_IndicatedHeadingDeg}" Width="50" />
                </WrapPanel>
            </StackPanel>
            <StackPanel Margin="5">
                <WrapPanel Margin="0,10,0,0">
                    <TextBlock Text="gpsIndicatedVerticalSpeed: " />
                    <TextBlock Text="{Binding VM_GpsIndicatedVerticalSpeed}" Width="50" />
                </WrapPanel>
            </StackPanel>
            <StackPanel Margin="5">
                <WrapPanel Margin="0,10,0,0">
                    <TextBlock Text="gpsIndicatedGroundSpeedKt: " />
                    <TextBlock Text="{Binding VM_GpsIndicatedGroundSpeedKt}" Width="50" />
                </WrapPanel>
            </StackPanel>
            <StackPanel Margin="5">
                <WrapPanel Margin="0,10,0,0">
                    <TextBlock Text="airspeedIndicatorIndicatedSpeedKt: " />
                    <TextBlock Text="{Binding VM_AirspeedIndicatorIndicatedSpeedKt}" Width="50" />
                </WrapPanel>
            </StackPanel>
            <StackPanel Margin="5">
                <WrapPanel Margin="0,10,0,0">
                    <TextBlock Text="gpsIndicatedAltitudeFt: " />
                    <TextBlock Text="{Binding VM_GpsIndicatedAltitudeFt}" Width="50" />
                </WrapPanel>
            </StackPanel>
            <StackPanel Margin="5">
                <WrapPanel Margin="0,10,0,0">
                    <TextBlock Text="indicatedHeadingDeg: " />
                    <TextBlock Text="{Binding VM_IndicatedHeadingDeg}" Width="50" />
                </WrapPanel>
            </StackPanel>
            <StackPanel Margin="5">
                <WrapPanel Margin="0,10,0,0">
                    <TextBlock Text="indicatedHeadingDeg: " />
                    <TextBlock Text="{Binding VM_IndicatedHeadingDeg}" Width="50" />
                </WrapPanel>
            </StackPanel>
            <StackPanel Margin="5">
                <WrapPanel Margin="0,10,0,0">
                    <TextBlock Text="indicatedHeadingDeg: " />
                    <TextBlock Text="{Binding VM_IndicatedHeadingDeg}" Width="50" />
                </WrapPanel>
            </StackPanel>
        </StackPanel>

        <Viewbox Grid.Column="2" Grid.Row="1" Grid.ColumnSpan="2" Margin="196.667,107.333,0.333,32.667" Grid.RowSpan="2">
            <Controls:Joystick x:Name="joystick1" Height="380" Width="340" Margin="10,10,10,10"/>
        </Viewbox>
        <m:Map x:Name="myMap" CredentialsProvider="AmM-5f5-E31yNc6LUhoJlE6nDVo7ZEXOPrcmgAJ4HfoJtLcSDG-EwwdT0_fODnUM" Grid.ColumnSpan="3" Margin="0,0,25.333,0" Grid.RowSpan="2">
            <Image Source ="plane.png" Width="60" VerticalAlignment="Bottom" Height="60"/>

        </m:Map>
    </Grid>
</Page>
